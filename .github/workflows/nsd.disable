name: nsd build 
on:
  push:
    branches: [ master ]
    paths: 'nsd/*'
  pull_request:
    branches: [ master ]
    paths: 'nsd/*'
jobs:
  nsd:
    runs-on: ubuntu-latest
    env:
      CONTAINER: nsd 
    steps:
    - name: Check out from HEAD
      uses: actions/checkout@v2
    - shell: bash
      run: |
        $GITHUB_WORKSPACE/ci/hooks/pre_build
    - name: Test build from HEAD
      run: docker build $CONTAINER --pull --tag $CONTAINER:$(date +%s)

