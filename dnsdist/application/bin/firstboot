. /opt/rootwyrm/lib/deploy.lib.sh

function config()
{
	if [ -f /firstboot ]; then
		printf '[dnsdist] Performing initial firstboot tasks.\n'
		printf '[dnsdist] This may take some time!\n'
		printf '\n'
	fi
	local CONFIG="/usr/local/etc/dnsdist/dnsdist.conf"
	## Create API key in persistent storage
	APIKEY="/usr/local/etc/dnsdist/conf.d/api.key"
	if [ ! -f $APIKEY ]; then
		## Use blocking randomness
		cat /dev/random | tr -dc 'a-zA-Z0-9' | fold -w 32 | head -n 1 > $APIKEY
		chmod 0700 $APIKEY
		chown 0:0 $APIKEY
		DNSDIST_APIKEY=$(cat $APIKEY)
	else
		DNSDIST_APIKEY=$(cat $APIKEY)
	fi

	## Generate a new random password when necessary
	PASSWD="/usr/local/etc/dnsdist/passwd"
	if [ ! -f $PASSWD ]; then
		## Use blocking randomness
		cat /dev/random | tr -dc 'a-zA-Z0-9' | fold -w 16 | head -n 1 > $PASSWD
		chmod 0700 $PASSWD
		chown 0:0 $PASSWD
		DNSDIST_PASSWD=$(cat $PASSWD)
	else
		DNSDIST_PASSWD=$(cat $PASSWD)
	fi
	
	## TODO: need to create listeners * NCPU
	## Insert IP addresses
	sed -i -e 's/%%DNSDIST_LOCALIP4%%/'$SYSTEM_LOCALIP4'/g' $CONFIG
	## Insert IPv6 if present, delete if absent
	if [ ! -z $SYSTEM_LOCALIP6 ]; then
		sed -i -e 's/%%DNSDIST_LOCALIP6%%/'$SYSTEM_LOCALIP6'/g' $CONFIG
	else
		sed -i -e '/.*%%DNSDIST_LOCALIP6%%.*/d' $CONFIG
	fi
	## API key
	sed -i -e 's/%%DNSDIST_APIKEY%%/'$DNSDIST_APIKEY'/g' $CONFIG
	## Password
	sed -i -e 's/%%DNSDIST_PASSWD%%/'$DNSDIST_PASSWD'/g' $CONFIG

	## Prevent re-run
	if [ -f /firstboot ]; then
		rm /firstboot
	fi

	## Fix permissions always
	chown -R dnsdist:dnsdist /usr/local/etc/dnsdist
	chown 0:0 $APIKEY
	chown 0:0 $PASSWD
}

function message()
{
	printf '**********************************************************************\n'
	printf 'System IPv4 Address %s\n' "$SYSTEM_LOCALIP4"
	if [ ! -z $SYSTEM_LOCALIP6 ]; then
		printf 'System IPv6 Address: %s\n' "$SYSTEM_LOCALIP6"
	fi
	printf '\n'
	printf 'dnsdist binding to %s\n' "$SYSTEM_LOCALIP4"
	if [ ! -z $SYSTEM_LOCALIP6 ]; then
		printf 'dnsdist binding to %s\n' "$SYSTEM_LOCALIP6"
	fi
	printf '\n'
	printf 'dnsdist API Key: %s\n' "$DNSDIST_APIKEY"
	printf 'dnsdist Web Password: admin:%s\n' "$DNSDIST_PASSWD"
	printf '**********************************************************************\n'
}

IPADDRESS
config
message
